<Window x:Class="Presentation.AddLuggage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Add New Luggage" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="GuestID:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Status:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="btnAdd" Grid.Column="0" Grid.Row="2" Content="Add" Margin="10" Click="btnAdd_Click"/>
        <ComboBox x:Name="cboGuest" Grid.Column="1" Grid.Row="0" Margin="10" VerticalContentAlignment="Center"/>
        <ComboBox x:Name="cboStatus" Grid.Column="1" Grid.Row="1" Margin="10" VerticalContentAlignment="Center"/>
        <Button x:Name="btnCancel" Grid.Column="1" Grid.Row="2" Content="Cancel" Margin="56 10" Click="btnCancel_Click"/>
    </Grid>
</Window>
