@model MillennialResortWebSite.Models.ErrorViewModel

@{
    ViewBag.Title = Model.Title;
}

<h2>Something went wrong</h2>

<div>
    <h3>@Model.Title</h3>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            <h4>@Model.Message</h4>
        </dd>
        <dd>@Html.ActionLink(Model.ButtonMessage, Model.ReturnAction, Model.ReturnController)</dd>
        <dd>
            @{ if (Model.ImageLocation != "")
                {
                <dd><img src="@Url.Content(Model.ImageLocation)" alt="@Model.ImageAlt" width=@Model.ImageWidth height=@Model.ImageHeight></dd>
            }
            }

            <dd>If Contacting Technical Support Please Give this message</dd>

            @Model.ExceptionMessage
        </dl>
    </div>
